<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#00A8E8"
                android:centerColor="#00A8E8"
                android:startColor="#ffffff"
                android:angle="270" />
            <stroke
                android:color="#ffffff" />
                <!--android:width="@dimen/_1sdp" in every stroke-->
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#00A8E8"
                android:startColor="#ffffff"
                android:angle="270" />
            <stroke
                android:color="#00A8E8" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#ffffff"
                android:centerColor="#00A8E8"
                android:startColor="#ffffff"
                android:angle="270" />
            <stroke
                android:color="#000055" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>